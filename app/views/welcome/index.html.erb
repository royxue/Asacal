<div id="background"></div>

<img class="ui small image" id="iconbox" src="icon/icon.png">

<div id="loginbox" class="ui piled segment">
<div class="ui two column middle aligned relaxed fitted stackable grid">
  <div class="left aligned column">
    <%=link_to new_user_session_path do%>
    <div id="signin" class="green ui labeled icon button">
      <i class="user icon"></i>
      ログイン
    </div>
    <% end %>
    <%=link_to new_official_session_path do%>
    <div id="signin" class="red ui labeled icon button">
      <i class="users icon"></i>
      公式ログイン
    </div>
    <% end %>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
  <div class="left aligned column">
    <%= link_to user_omniauth_authorize_path(:facebook) do%>
      <div class="ui facebook button">
        <i class="facebook icon"></i>
        Facebook
      </div>
    <% end %>
    <%= link_to new_user_registration_path do%>
    <div id="signup" class="green ui labeled icon button">
      <i class="signup icon"></i>
      登録
    </div>
    <% end %>
    <%= link_to new_official_registration_path do%>
    <div id="signup" class="red ui labeled icon button">
      <i class="signup icon"></i>
      公式登録
    </div>
    <% end %>
  </div>
</div>
</div>
