<%= simple_form_for(@calendar) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description, :as => :text%>
    <%= f.input :is_public, :as => :boolean %>
    <%= f.input :image %>
    <%= f.input :link %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
