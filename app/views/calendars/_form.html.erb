<div class="ui center aligned stacked segment">
  <div id="formbox" class="ui left aligned segment">

  <%= simple_form_for(@calendar) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description, :as => :text%>
      <%= f.input :is_public, :as => :boolean %>
      <%= f.input :img, as: :file, hint: "Img should be bigger than 300x300" %>
      <%= f.input :link %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>

  </div>
</div>
