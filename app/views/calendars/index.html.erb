<div id="header" class="ui piled segment"><h1>Hot Calendars</h1></div>

<br>
<div id="l-container">
  <%= render "layouts/sidebar"%>
  <div id="s-container">
    <div class="ui special cards">
      <% @calendars.each do |calendar| %>
      <div class="card">
        <div class="dimmable image">
          <% if calendar.img? %>
            <% img_link = calendar.img.url(:medium) %>
          <% else %>
            <% img_link = "/default/1.jpg" %>
          <% end %>
          <% if current_user %>
            <div class="ui dimmer">
              <div class="content">
                <div class="center">
                  <%=link_to follow_calendar_users_path(user: current_user, calendar: calendar), :method => :post do%>
                  <% if current_user.calendars.include? calendar %>
                      <div class="ui inverted button">Unfollow</div>
                    <% elsif %>
                      <div class="ui inverted button">Follow</div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
          <img src="<%= img_link%>">
        </div>
        <div class="content">
          <div class="header"><%= calendar.name %></div>
          <div class="meta">
            <%=link_to "#{calendar.official.name}", official_path(calendar.official)%>
          </div>
          <div class="description">
            <%= calendar.description %>
          </div>
        </div>
        <div class="extra content">
          <span class="right floated">
            <% if calendar.official.is_company? %>
              <i class="fa-star icon"></i>
              Official
            <% else %>
              Public
            <% end %>
          </span>
          <span>
            <i class="heart icon"></i>
             <%= calendar.like_count %>
          </span>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
