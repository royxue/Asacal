<div class="ui center aligned stacked segment">
  <div id="formbox" class="ui left aligned segment">

  <%= simple_form_for(@event) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%=f.input :calendar, :collection => current_official.calendars, :label_method => :name, :value_method => :id, :include_blank => true %>
      <%=f.input :name %>
      <%=f.input :description, :as => :text %>
      <%=f.input :image %>
      <%=f.input :img, as: :file, hint: "Img should be bigger than 300x300" %>
      <%=f.input :place %>
      <%=f.input :link %>
      <%=f.input :note, :as => :text %>
      <%=f.input :is_all_day, :as => :boolean %>
      <%=f.input :start_time, :as => :datetime %>
      <%=f.input :end_time, :as => :datetime %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>

  </div>
</div>
